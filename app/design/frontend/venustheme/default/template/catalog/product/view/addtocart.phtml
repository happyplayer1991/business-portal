<?php $addToCartHtml = $addtocartIcon.$addtocart_text; ?>
<?php }elseif($addtocart_format == 'text-icon'){ // Text, Icon ?>
<?php $addToCartHtml = $addtocart_text.$addtocartIcon; ?>
<?php } ?>

